<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Back"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/countryNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Country Name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="32dp"
            android:textColor="#1976D2" />

        <!-- Basic Country Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country Information"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:textColor="#1976D2" />

            <TextView
                android:id="@+id/populationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Population: Loading..."
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/areaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Area: Loading..."
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/densityText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Density: Loading..."
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/landmassPercentageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="% of World Landmass: Loading..."
                android:textSize="16sp" />

        </LinearLayout>

        <!-- CO₂ Emissions Statistics -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E8F5E8"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CO₂ Emissions Statistics"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:textColor="#2E7D32" />

            <TextView
                android:id="@+id/totalEmissionsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total CO₂ Emissions: Loading..."
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:textStyle="bold"
                android:textColor="#D32F2F" />

            <TextView
                android:id="@+id/avgEmissionsPerCapitaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Average Emissions per Capita: Loading..."
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:textColor="#F57C00" />

            <TextView
                android:id="@+id/highestEmissionYearText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year with Highest Emissions: Loading..."
                android:textSize="16sp"
                android:textColor="#7B1FA2" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All emissions are measured in million tons (Mt) of CO₂ equivalent. Per capita emissions are calculated using the most recent year's data."
            android:textSize="12sp"
            android:textColor="#666666"
            android:textAlignment="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>