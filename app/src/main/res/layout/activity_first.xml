<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header Banner (same as MainActivity) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CO₂ Emission Tracker"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:elevation="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Back"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/countryNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country Name"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="16dp"
                android:textColor="#1976D2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CO₂ Emissions Statistics"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="32dp"
                android:textColor="#2E7D32" />

            <!-- CO₂ Emissions Statistics -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#E8F5E8"
                android:padding="24dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/totalEmissionsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total CO₂ Emissions: Loading..."
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold"
                    android:textColor="#D32F2F"
                    android:padding="12dp"
                    android:background="#FFFFFF" />

                <TextView
                    android:id="@+id/avgEmissionsPerCapitaText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Average Emissions per Capita: Loading..."
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold"
                    android:textColor="#F57C00"
                    android:padding="12dp"
                    android:background="#FFFFFF" />

                <TextView
                    android:id="@+id/highestEmissionYearText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Year with Highest Emissions: Loading..."
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#7B1FA2"
                    android:padding="12dp"
                    android:background="#FFFFFF" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This country is ranked in the Top 10 highest CO₂ emitters for 2020."
                android:textSize="16sp"
                android:textColor="#666666"
                android:textAlignment="center"
                android:layout_marginBottom="16dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All emissions are measured in million tons (Mt) of CO₂ equivalent. Per capita emissions are calculated using the most recent year's data."
                android:textSize="12sp"
                android:textColor="#666666"
                android:textAlignment="center"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>